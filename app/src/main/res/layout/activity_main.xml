<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_background_gradient"
    android:orientation="vertical"
    tools:context=".activities.main.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="8dp">

                <MultiAutoCompleteTextView
                    android:id="@+id/multiAutoCompleteTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:textColor="?attr/colorText"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/imageViewSearch"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0"
                    android:padding="8dp"
                    app:srcCompat="@drawable/ic_baseline_search_24_light" />

                <ImageView
                    android:id="@+id/imageViewAddLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0"
                    android:background="@drawable/button_back"
                    android:padding="8dp"
                    app:srcCompat="@drawable/ic_round_add" />

                <ImageView
                    android:id="@+id/imageViewMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0"
                    android:background="@drawable/button_back"
                    android:padding="8dp"
                    app:srcCompat="@drawable/ic_baseline_more_vert" />

                <ImageView
                    android:id="@+id/imageViewDots"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:padding="8dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_baseline_more_vert_24" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/ic_baseline_location_on_24" />

                <TextView
                    android:id="@+id/textViewCityName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="?attr/colorText"
                    android:textSize="24sp" />
            </LinearLayout>

            <TextClock
                android:id="@+id/textViewFullDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:format24Hour="EE, dd MMMM, HH:mm"
                android:textColor="?attr/colorText"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewWeatherPromo"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="0"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_baseline_cloud_24" />

                <TextView
                    android:id="@+id/textViewMainTemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="?attr/colorText"
                    android:textSize="64sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textViewStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                android:textColor="?attr/colorText"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textViewDetailedStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="?attr/colorText"
                android:textSize="14sp" />

            <com.yandex.mobile.ads.nativeads.NativeAdView
                android:id="@+id/nativeAdView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="0dp"
                android:layout_weight="0"
                android:padding="16dp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/adView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="?attr/colorCard"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardUseCompatPadding="false">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingHorizontal="0dp"
                            android:paddingTop="8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="0dp"
                                android:layout_marginEnd="0dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="16dp"
                                    android:layout_weight="0"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/adsPromo"
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:layout_gravity="center"
                                        android:layout_marginEnd="8dp"
                                        android:layout_weight="0"
                                        android:padding="0dp" />

                                    <TextView
                                        android:id="@+id/age"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="bottom"
                                        android:layout_weight="0"
                                        android:enabled="false"
                                        android:gravity="bottom"
                                        android:text="0+"
                                        android:textColor="?attr/colorText"
                                        android:textSize="10sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="0dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:paddingVertical="0dp">

                                        <TextView
                                            android:id="@+id/storeView"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginHorizontal="0dp"
                                            android:layout_marginVertical="0dp"
                                            android:layout_weight="0"
                                            android:enabled="true"
                                            android:fontFamily="@font/roboto"
                                            android:gravity="center|end"
                                            android:text=""
                                            android:textColor="?attr/colorText"
                                            android:textSize="14sp" />

                                    </LinearLayout>

                                </LinearLayout>

                                <ImageView
                                    android:id="@+id/imageViewFeedback"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_marginVertical="0dp"
                                    android:layout_marginStart="0dp"
                                    android:layout_marginEnd="24dp"
                                    android:layout_weight="0" />

                            </LinearLayout>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginEnd="16dp"
                                android:layout_marginBottom="16dp"
                                app:cardBackgroundColor="?attr/colorCard"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="0dp">

                                <com.yandex.mobile.ads.nativeads.MediaView
                                    android:id="@+id/media"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                </com.yandex.mobile.ads.nativeads.MediaView>
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/tvHeadline"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="0dp"
                                android:layout_marginVertical="4dp"
                                android:enabled="false"
                                android:fontFamily="@font/roboto_bold"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                android:textColor="?attr/colorText"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvAdvertiser"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="0dp"
                                android:layout_marginVertical="0dp"
                                android:enabled="true"
                                android:fontFamily="@font/roboto"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                android:textColor="?attr/colorText"
                                android:textSize="14sp" />

                            <RatingBar
                                android:id="@+id/rating"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|left"
                                android:layout_marginVertical="4dp"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                android:isIndicator="true"
                                android:numStars="5"
                                android:stepSize="0.5" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="0dp"
                                android:layout_marginEnd="0dp"
                                android:layout_marginBottom="8dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textViewDomain"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginHorizontal="0dp"
                                    android:layout_marginVertical="0dp"
                                    android:layout_marginStart="18dp"
                                    android:layout_weight="1"
                                    android:enabled="false"
                                    android:fontFamily="@font/roboto"
                                    android:text=""
                                    android:textColor="?attr/colorOutline"
                                    android:textSize="10sp" />

                                <TextView
                                    android:id="@+id/priceView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginHorizontal="0dp"
                                    android:layout_marginVertical="0dp"
                                    android:layout_weight="1"
                                    android:enabled="false"
                                    android:fontFamily="@font/roboto"
                                    android:text=""
                                    android:textColor="?attr/colorOutline"
                                    android:textSize="10sp" />

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="0dp"
                                    android:layout_marginVertical="0dp"
                                    android:layout_marginStart="18dp"
                                    android:layout_marginEnd="24dp"
                                    android:layout_weight="0"
                                    app:cardBackgroundColor="?attr/colorCard"
                                    app:cardCornerRadius="12dp"
                                    app:cardElevation="0dp">

                                    <TextView
                                        android:id="@+id/btnVisitSite"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="#00FFFFFF"
                                        android:enabled="false"
                                        android:fontFamily="@font/roboto"
                                        android:gravity="center"
                                        android:paddingHorizontal="18dp"
                                        android:paddingTop="8dp"
                                        android:paddingBottom="8dp"
                                        android:text="Подробнее"
                                        android:textSize="12sp" />

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/textViewWarning"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:enabled="false"
                                android:fontFamily="@font/roboto"
                                android:paddingStart="16dp"
                                android:paddingTop="4dp"
                                android:paddingEnd="16dp"
                                android:paddingBottom="4dp"
                                android:textColor="?attr/colorText"
                                android:textSize="8sp" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </com.yandex.mobile.ads.nativeads.NativeAdView>

            <LinearLayout
                android:id="@+id/alerts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Важно для прочтения"
                    android:textColor="?attr/colorText"
                    android:textSize="14sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#6C621E"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="16dp"
                        android:paddingTop="24dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="8dp">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewAlerts"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:text="@string/_9"
                                android:textColor="#E9D130"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_bold"
                                android:text="@string/text_1"
                                android:textColor="#E9D130"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="16dp"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:text="@string/_10"
                                android:textColor="#E9D130"
                                android:textSize="14sp" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardBackgroundColor="#E9D130"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="0dp">

                                <TextView
                                    android:id="@+id/textView9"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="12dp"
                                    android:paddingTop="8dp"
                                    android:paddingEnd="12dp"
                                    android:paddingBottom="8dp"
                                    android:text="@string/more"
                                    android:textColor="#6C621E" />
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textViewTempYesterday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginBottom="4dp"
                    android:textColor="?attr/colorText"
                    android:textSize="14sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="?attr/colorCard"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardUseCompatPadding="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@drawable/menu_divider"
                        android:dividerPadding="16dp"
                        android:orientation="horizontal"
                        android:showDividers="middle">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:paddingStart="16dp"
                            android:paddingTop="24dp"
                            android:paddingEnd="8dp"
                            android:paddingBottom="24dp">

                            <ImageView
                                android:id="@+id/imageView6"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:layout_marginEnd="8dp"
                                android:layout_weight="0"
                                app:srcCompat="@drawable/ic_rain" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp"
                                    android:layout_weight="0"
                                    android:fontFamily="@font/roboto_bold"
                                    android:text="Влажность"
                                    android:textColor="?attr/colorText"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/textViewChanceOfRain"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0"
                                    android:textColor="?attr/colorText"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="2dp"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:paddingStart="8dp"
                            android:paddingTop="24dp"
                            android:paddingEnd="16dp"
                            android:paddingBottom="24dp">

                            <ImageView
                                android:id="@+id/imageView5"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:layout_marginEnd="8dp"
                                android:layout_weight="0"
                                app:srcCompat="@drawable/windy" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp"
                                    android:fontFamily="@font/roboto_bold"
                                    android:text="Ветер"
                                    android:textColor="?attr/colorText"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/textViewWindSpeed"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="?attr/colorText"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Почасовой прогноз"
                    android:textColor="?attr/colorText"
                    android:textSize="14sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="?attr/colorCard"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingStart="4dp"
                        android:paddingTop="24dp"
                        android:paddingEnd="4dp"
                        android:paddingBottom="24dp">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewHourlyForecast"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:layout_marginBottom="0dp"
                            app:cardBackgroundColor="#1AFFFFFF"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:cardMaxElevation="0dp">

                            <TextView
                                android:id="@+id/textView11"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="14dp"
                                android:paddingTop="8dp"
                                android:paddingEnd="14dp"
                                android:paddingBottom="8dp"
                                android:text="5 дней"
                                android:textColor="?attr/colorText"
                                android:textSize="14sp" />
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Прогноз на несколько дней"
                    android:textColor="?attr/colorText"
                    android:textSize="14sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="?attr/colorCard"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingStart="4dp"
                        android:paddingTop="24dp"
                        android:paddingEnd="4dp"
                        android:paddingBottom="24dp">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewDailyForecast"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:layout_marginBottom="0dp"
                            app:cardBackgroundColor="#1AFFFFFF"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:cardMaxElevation="0dp">

                            <TextView
                                android:id="@+id/textView15"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="14dp"
                                android:paddingTop="8dp"
                                android:paddingEnd="14dp"
                                android:paddingBottom="8dp"
                                android:text="3 дня"
                                android:textColor="?attr/colorText"
                                android:textSize="14sp" />
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="@string/sunrise_and_sunset"
                    android:textColor="?attr/colorText"
                    android:textSize="14sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="?attr/colorCard"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="8dp"
                        android:paddingTop="24dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="24dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textViewValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="2dp"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="center"
                                android:text="Восход"
                                android:textColor="?attr/colorText"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/textViewSunriseTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="24dp"
                                android:fontFamily="@font/roboto"
                                android:gravity="center"
                                android:textColor="?attr/colorText"
                                android:textSize="16sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="92dp"
                                android:layout_gravity="bottom|center"
                                android:gravity="bottom|center"
                                android:orientation="vertical"
                                android:paddingTop="0dp">

                                <ImageView
                                    android:id="@+id/imageViewSmallPromo"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/sunrise_im" />

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cardSunrise"
                                    android:layout_width="2dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="4dp"
                                    android:layout_marginBottom="4dp"
                                    app:cardBackgroundColor="#FFFFFF"
                                    app:cardCornerRadius="2dp"
                                    app:cardElevation="0dp" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textViewValue1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="2dp"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="center"
                                android:text="Закат"
                                android:textColor="?attr/colorText"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/textViewSunsetTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="24dp"
                                android:fontFamily="@font/roboto"
                                android:gravity="center"
                                android:textColor="?attr/colorText"
                                android:textSize="16sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="92dp"
                                android:layout_gravity="bottom|center"
                                android:gravity="bottom|center"
                                android:orientation="vertical"
                                android:paddingTop="0dp">

                                <ImageView
                                    android:id="@+id/imageViewSmallPromo1"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/sunset_im" />

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cardSunset"
                                    android:layout_width="2dp"
                                    android:layout_height="23dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="4dp"
                                    android:layout_marginBottom="4dp"
                                    app:cardBackgroundColor="#FFFFFF"
                                    app:cardCornerRadius="2dp"
                                    app:cardElevation="0dp" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Состав воздуха"
                    android:textColor="?attr/colorText"
                    android:textSize="14sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="?attr/colorCard"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingStart="16dp"
                        android:paddingTop="24dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="24dp">

                        <org.eazegraph.lib.charts.PieChart
                            android:id="@+id/pieChart"
                            android:layout_width="140dp"
                            android:layout_height="140dp"
                            android:layout_marginTop="12dp"
                            android:padding="0dp"
                            app:egDrawValueInPie="false"
                            app:egInnerPadding="36"
                            app:egInnerPaddingColor="?android:attr/colorBackground"
                            app:egLegendHeight="0dp"
                            app:egLegendTextSize="0sp"
                            app:egUseInnerPadding="false"
                            app:egUsePieRotation="true"
                            app:egValueTextSize="0sp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewAirQuality"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>